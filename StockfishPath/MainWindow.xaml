<Window
    Height="150"
    Title="Stockfish Path"
    Width="400"
    mc:Ignorable="d"
    x:Class="StockfishPath.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StockfishPath"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0.4*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox
            Grid.Row="1"
            Margin="30,0,0,0"
            Name="TextBox"
            VerticalContentAlignment="Center" />

        <Button
            Click="BrowseBtn_OnClick"
            Content="Browse..."
            Grid.Column="1"
            Grid.Row="1"
            Name="BrowseBtn" />

        <Button
            Click="ConfirmBtn_OnClick"
            Content="Confirm"
            Grid.Column="1"
            Grid.Row="2"
            Name="ConfirmBtn" />
    </Grid>
</Window>
